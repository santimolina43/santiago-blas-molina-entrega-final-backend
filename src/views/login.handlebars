 <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Iniciar Sesión</h3>
                    </div>
                    <div class="card-body">
                        <form id="loginForm" action="/api/user" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="email">Nombre de Usuario</label>
                                <input type="text" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <div style="display:flex; flex-direction: row; justify-content: space-around">
                                <button type="submit" class="btn btn-primary btn-block mt-3">Iniciar Sesión</button>
                                <a class="btn btn-dark btn-block mt-3" href="/api/user/github">Iniciar sesion con GitHub</a>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <a href="http://localhost:8080/user/resetpassword">Olvidé mi contraseña</a>
                            <p>¿No tienes una cuenta?</p>
                            <a href='http://localhost:8080/user/register' class="btn btn-success">Registrarse</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
